<!--pages/video/index/index.wxml-->
<navigation-bar default-data="{{defaultData}}"></navigation-bar>
<view class="bg"><image mode="aspectFill" src="{{imgsrc}}bg.png"></image></view>
<view class="btn_home" bindtap="goHome"><image mode="aspectFill" src="{{imgsrc}}btn_home.png"></image></view>
<view class="btn_rule" bindtap="showRule"><image mode="aspectFill" src="{{imgsrc}}btn_rule.png"></image></view>
<view class="t1"><image mode="aspectFill" src="{{imgsrc}}t1.png"></image></view>
<view class="man1"><image mode="aspectFill" src="{{imgsrc}}man1.png"></image></view>
<view class="man2"><image mode="aspectFill" src="{{imgsrc}}man2.png"></image></view>
<view class="btn_start" bindtap="start"><image mode="aspectFill" src="{{imgsrc}}btn_start.png"></image></view>

<view class="tcDom" wx:if="{{showRule}}">
  <view class="tcBox">
    <view class="rule"><image mode="aspectFill" src="{{imgsrc}}rule.png"></image></view>
    <view class="btn_close" bindtap="hideRule"><image mode="aspectFill" src="{{imgsrc}}btn_close.png"></image></view>
  </view>
</view>