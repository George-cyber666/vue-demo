/* pages/video/list/index.wxss */
page{
  background-color: #F2F2F2;
}
image{
  width: 100%;
  height: 100%;
  display: block;
}
.bottomDom{
  width: 100%;
  height: 125rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
  z-index: 1000;
}
.videoHome{
  height: 100%;
  line-height: 125rpx;
  font-size: 24rpx;
  color: #000;
  padding: 0 60rpx;
  position: absolute;
  top:0;
  left: 0;
}
.myVideo{
  height: 100%;
  line-height: 125rpx;
  font-size: 24rpx;
  color: #000;
  padding: 0 60rpx;
  position: absolute;
  top:0;
  right: 0;
}
.upload{
  width: 91rpx;
  height: 91rpx;
  position: absolute;
  top:11rpx;
  left: 50%;
  transform: translateX(-50%);
}

.list{
  margin: 302rpx auto auto auto;
  width: 710rpx;
  padding-bottom: 150rpx;
}
.item{
  width: 342rpx;
  height: 500rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
  display: inline-block;
  vertical-align: middle;
  margin-right: 21rpx;
  margin-bottom: 22rpx;
}
.item:nth-child(2n+0){
  margin-right: 0;
}
.photoBox{
  width: 100%;
  height: 400rpx;
  overflow: hidden;
  position: relative;
}
.photo>image{
  width: 100%;
  height: 400rpx;
}
.hover{
  position:absolute;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.4);
}
.btn_play{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top:50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.face{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom:47rpx;
  left: 18rpx;
  border-radius: 50%;
  background-color: #D6D6D6;
  overflow: hidden;
}
.nickName{
  position: absolute;
  bottom:53rpx;
  left: 69rpx;
  font-size: 20rpx;
  color: #000;
}
.time{
  position: absolute;
  bottom:13rpx;
  left: 25rpx;
  font-size: 16rpx;
  color: rgb(128, 128, 128);
}
.icon{
  position: absolute;
  bottom:50rpx;
  right: 0;
  padding: 0 20rpx;
}
.icon>image{
  width: 23rpx;
  height: 26rpx;
}
.num{
  width: 63rpx;
  position: absolute;
  bottom:18rpx;
  right: 0;
  font-size: 16rpx;
  color: #000;
  text-align: center;
}
.topBox{
  width: 100%;
  height: 114rpx;
  position: fixed;
  top:176rpx;
  left: 0;
  z-index: 10;
  background-color: #F2F2F2;
}
.btn_home{
  width: 160rpx;
  height: 60rpx;
  position: absolute;
  top:26rpx;
  left: 34rpx;
}
.btn_picker {
  position: absolute;
  width: 302rpx;
  height: 62rpx;
  top: 26rpx;
  left: 224rpx;
}
.bg_picker {
  width: 302rpx;
  height: 62rpx;
  background: url(https://small.moreedge.cn/zh_smallxcx/activity1/btn_picker.png) no-repeat top/100%;
  padding-left: 30rpx;
  line-height: 62rpx;
  font-size: 24rpx;
}
.btn_rule{
  width: 160rpx;
  height: 60rpx;
  position: absolute;
  top:26rpx;
  right: 34rpx;
}


.tcDom{
  width: 100%;
  height: 100%;
  position: fixed;
  top:0;
  left: 0;
  background-color: rgba(0,0,0,0.8);
  z-index: 1000;
}
.tcBox{
  position: absolute;
  top:50%;
  left: 50%;                                                                    
  transform: translate(-50%,-50%);
}
.rule{
  width: 698rpx;
  height: 750rpx;
}
.btn_close{
  width: 59rpx;
  height: 59rpx;
  position: absolute;
  top:-102rpx;
  right: 0;
}
.tip{
  font-size: 24rpx;
  color: #000;
  position: absolute;
  top:50%;
  left: 50%;                                                                    
  transform: translate(-50%,-50%);
}