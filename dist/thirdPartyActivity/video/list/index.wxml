<!--pages/video/list/index.wxml-->
<navigation-bar default-data="{{defaultData}}"></navigation-bar>
<view class="topBox">
  <view class="btn_home" bindtap="goHome">
    <image mode="aspectFill" src="{{imgsrc}}btn_home.png"></image>
  </view>
  <view class="btn_picker">
    <picker range="{{sfpicker}}" bindchange="sfpickerc">
      <view class="bg_picker">{{sfpicker_text}}</view>
    </picker>
  </view>
  <view class="btn_rule" bindtap="showRule">
    <image mode="aspectFill" src="{{imgsrc}}btn_rule.png"></image>
  </view>
</view>

<view class="list">
  <block wx:if="{{videoList.length>0}}">
    <view class="item" wx:for="{{videoList}}">
      <view class="photoBox">
        <view class="hover"></view>
        <view class="photo">
          <image mode="aspectFit" src="{{item.img_path}}"></image>
        </view>
        <view class="btn_play" data-id="{{item.id}}" bindtap="goDetail">
          <image mode="aspectFill" src="{{imgsrc}}btn_play.png"></image>
        </view>
      </view>
      <view class="face">
        <image mode="aspectFill" src="{{item.head}}"></image>
      </view>
      <view class="nickName">{{item.nickname}}</view>
      <view class="time">{{item.createymd}}</view>
      <view class="icon" data-index="{{index}}" data-id="{{item.id}}" bindtap="addVideoHelp">
        <image mode="aspectFill" src="{{imgsrc}}{{item.is_zan==1?'icon2.png':'icon1.png'}}"></image>
      </view>
      <view class="num">{{item.help_number}}</view>
    </view>
  </block>
  <view class="tip" wx:else>暂无视频</view>
</view>
<view class="bottomDom">
  <view class="videoHome" bindtap="goVideoList">视频大厅</view>
  <view class="myVideo" bindtap="goMyVideo">我的视频</view>
  <view class="upload" bindtap="goUpload">
    <image mode="aspectFill" src="{{imgsrc}}uploadIcon.png"></image>
  </view>
</view>

<view class="tcDom" wx:if="{{showRule}}">
  <view class="tcBox">
    <view class="rule">
      <image mode="aspectFill" src="{{imgsrc}}rule.png"></image>
    </view>
    <view class="btn_close" bindtap="hideRule">
      <image mode="aspectFill" src="{{imgsrc}}btn_close.png"></image>
    </view>
  </view>
</view>