/* pages/video/upload/index.wxss */
page {
  background-color: #F2F2F2;
}

image {
  width: 100%;
  height: 100%;
  display: block;
}

.bottomDom {
  width: 100%;
  height: 125rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
  z-index: 1000;
}

.videoHome {
  height: 100%;
  line-height: 125rpx;
  font-size: 24rpx;
  color: #000;
  padding: 0 60rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.myVideo {
  height: 100%;
  line-height: 125rpx;
  font-size: 24rpx;
  color: #000;
  padding: 0 60rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.upload {
  width: 91rpx;
  height: 91rpx;
  position: absolute;
  top: 11rpx;
  left: 50%;
  transform: translateX(-50%);
}

.uploadPic1 {
  width: 688rpx;
  height: 400rpx;
  margin: 205rpx auto auto auto;
  position: relative;
}
.videoBox{
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: absolute;
  top:0;
  left: 0;
}
.videoBox video{
  width: 100%;
  height: 100%;
}
.title {
  font-size: 26rpx;
  color: #000;
  margin: 22rpx auto auto 55rpx;
}

.videoPic {
  width: 240rpx;
  height: 240rpx;
  margin: 19rpx auto auto 33rpx;
  border-radius: 15rpx;
  overflow: hidden;
  position: relative;
}
.uploadImg{
  width: 240rpx;
  height: 240rpx;
  border-radius: 15rpx;
  overflow: hidden;
  position: absolute;
  top:0;
  left: 0;
}
.btn_upload {
  width: 650rpx;
  height: 80rpx;
  margin: 89rpx auto;
}