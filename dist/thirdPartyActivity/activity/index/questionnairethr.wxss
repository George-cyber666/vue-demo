/* pages/activity/index/questionnairethr.wxss */
.container {
  width: 100%;
  min-height: 100vh;
  box-sizing: border-box;
  background-color: #e3f6ff;
  padding-bottom: 100rpx;
}

.container-hd {
  width: 600rpx;
  margin: 0 auto;
  text-align: left;
  font-size: 26rpx;
  padding-top: 230rpx;
}

.questionnaire {
  width: 722rpx;
  height: 892rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  padding-top: 316rpx;
  padding-left: 130rpx;
  padding-right: 108rpx;
  box-sizing: border-box;
  background: url(https://small.moreedge.cn/zh_smallxcx/activity1/questionnaire-4.png) no-repeat top/100%;
}

.inp {
  display: flex;
  position: relative;
}

.inpts {
  color: red;
  position: absolute;
  top: 5rpx;
  left: -26rpx;
}

.inp view {
  width: 150rpx;
  font-weight: 700;
  font-size: 30rpx;
  margin-bottom: 40rpx;
}

.inp input {
  width: 316rpx;
  border-bottom: 5rpx solid #000;
  text-align: right;
  padding-right: 10rpx;
}

.questionnaire-li {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.questionnaires {
  width: 75rpx;
  height: 80rpx;
}

.questionnaires-a {
  background: url(https://small.moreedge.cn/zh_smallxcx/activity1/questionnaire-answer-a.png) no-repeat top/100%;
}

.questionnaires-b {
  background: url(https://small.moreedge.cn/zh_smallxcx/activity1/questionnaire-answer-b.png) no-repeat top/100%;
}

.questionnaires-c {
  background: url(https://small.moreedge.cn/zh_smallxcx/activity1/questionnaire-answer-c.png) no-repeat top/100%;
}

.questionnaires-d {
  background: url(https://small.moreedge.cn/zh_smallxcx/activity1/questionnaire-answer-d.png) no-repeat top/100%;
}

.questionnaires-e {
  background: url(https://small.moreedge.cn/zh_smallxcx/activity1/questionnaire-answer-e.png) no-repeat top/100%;
}

.questionnairetext {
  width: 394rpx;
  height: 80rpx;
  line-height: 70rpx;
  padding-left: 44rpx;
  font-size: 30rpx;
  font-weight: 700;
  background: url(https://small.moreedge.cn/zh_smallxcx/activity1/questionnaire-answer-false.png) no-repeat top/100%;
  box-sizing: border-box;
}

.questionnaire-li.active .questionnairetext {
  background: url(https://small.moreedge.cn/zh_smallxcx/activity1/questionnaire-answer-true.png) no-repeat top/100%;
}

.questionnaire-btn {
  width: 654rpx !important;
  height: 84rpx;
  margin: 0 auto;
  margin-top: 72rpx;
  background: url(https://small.moreedge.cn/zh_smallxcx/activity1/nextone.png) no-repeat top/100%;
}