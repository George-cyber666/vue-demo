.questionnairetext {
  width: 420rpx;
  height: 132rpx;
  padding-left: 44rpx;
  font-size: 26rpx;
  background: url(https://small.moreedge.cn/zh_smallxcx/activity1/questionnaire-answers-false.png) no-repeat top/100%;
  box-sizing: border-box;
}

.questionnairetext view:nth-child(1){
  margin-top: 22rpx;
  font-weight: 600;
}

.questionnairetext view:nth-child(2){
  margin-top: 8rpx;
  color: #9FA0A0;
}

.questionnairetext input {
  border-bottom: 2px solid #000;
  font-weight: 600;
}

.questionnaire-li.active .questionnairetext {
  background: url(https://small.moreedge.cn/zh_smallxcx/activity1/questionnaire-answers-true.png) no-repeat top/100%;
}

.questionnaire-btn {
  width: 654rpx !important;
  height: 84rpx;
  margin: 0 auto;
  margin-top: 72rpx;
  background: url(https://small.moreedge.cn/zh_smallxcx/activity1/nextone.png) no-repeat top/100%;
}
.hover{
  position: absolute;
  top:0;
  left: 0;
  width: 100%;
