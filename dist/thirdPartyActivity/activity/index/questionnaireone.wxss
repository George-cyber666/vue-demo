.container {
  width: 100%;
  min-height: 100vh;
  box-sizing: border-box;
  background-color: #e3f6ff;
  padding-bottom: 100rpx;
}

.container-hd {
  width: 600rpx;
  margin: 0 auto;
  text-align: left;
  font-size: 26rpx;
  padding-top: 230rpx;
}

.questionnaire {
  width: 722rpx;
  height: 1936rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  padding-top: 280rpx;
  padding-left: 110rpx;
  padding-right: 100rpx;
  box-sizing: border-box;
  background: url(https://small.moreedge.cn/zh_smallxcx/activity1/questionnaire-2.png) no-repeat top/100%;
}

.questionnaire-li {
  display: flex;
  justify-content: space-between;
  margin-bottom: 57rpx;
  align-items: center;
  position: relative;
}
