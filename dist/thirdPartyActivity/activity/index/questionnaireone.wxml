<!--pages/activity/index/questionnaireone.wxml-->
<navigation-bar default-data="{{defaultData}}"></navigation-bar>
<view class="container">
  <view class="container-hd">为了便于后续能策划出更丰富的活动，以满足不同家庭的需求，请完善以下信息。</view>
  <view class="questionnaire">
    <view class="questionnaire-li {{ optionChoose[0]?'active':''}}" bindtap="clickcheck" data-id="0">
      <view class="questionnaires questionnaires-a"></view>
      <view class="questionnairetext">
        <view>亲子类活动</view>
        <view>手工、出游、趣味赛</view>
      </view>
    </view>
    <view class="questionnaire-li {{ optionChoose[1]?'active':''}}" bindtap="clickcheck" data-id="1">
      <view class="questionnaires questionnaires-b"></view>
      <view class="questionnairetext">
        <view>球类竞技活动</view>
        <view>篮球、羽毛球、乒乓球等</view>
      </view>
    </view>
    <view class="questionnaire-li {{ optionChoose[2]?'active':''}}" bindtap="clickcheck" data-id="2">
      <view class="questionnaires questionnaires-c"></view>
      <view class="questionnairetext">
        <view>运动类活动</view>
        <view>彩虹跑、趣味运动会</view>
      </view>
    </view>
    <view class="questionnaire-li {{ optionChoose[3]?'active':''}}" bindtap="clickcheck" data-id="3">
      <view class="questionnaires questionnaires-d"></view>
      <view class="questionnairetext">
        <view>艺术类活动</view>
        <view>观影、K歌</view>
      </view>
    </view>
    <view class="questionnaire-li {{ optionChoose[4]?'active':''}}" bindtap="clickcheck" data-id="4">
      <view class="questionnaires questionnaires-e"></view>
      <view class="questionnairetext">
        <view>公益类活动</view>
        <view>志愿者服务、以物易物</view>
      </view>
    </view>
    <view class="questionnaire-li {{ optionChoose[5]?'active':''}}" bindtap="clickcheck" data-id="5">
      <view class="questionnaires questionnaires-f"></view>
      <view class="questionnairetext">
        <view>游戏类</view>
        <view>王者荣耀、麻将、掼蛋</view>
      </view>
    </view>
    <view class="questionnaire-li {{ optionChoose[6]?'active':''}}" bindtap="clickcheck" data-id="6">
      <view class="questionnaires questionnaires-g"></view>
      <view class="questionnairetext">
        <view>知识讲座</view>
        <view>健康、消防、学校</view>
      </view>
    </view>
    <view class="questionnaire-li {{ optionChoose[7]?'active':''}}" >
      <view class="hover" bindtap="clickcheck" data-id="7"></view>
      <view class="questionnaires questionnaires-h"></view>
      <view class="questionnairetext">
        <view>其他</view>
        <input type="text" maxlength="16" value="{{inpoption}}" bindinput="changeinp"/>
      </view>
    </view>
  </view>
  <button class="questionnaire-btn" bindtap="clicktoplan"></button>
</view>

