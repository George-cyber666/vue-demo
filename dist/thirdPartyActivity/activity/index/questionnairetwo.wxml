<!--pages/activity/index/questionnairetwo.wxml-->
<navigation-bar default-data="{{defaultData}}"></navigation-bar>
<view class="container">
  <view class="container-hd">为了便于后续能策划出更丰富的活动，以满足不同家庭的需求，请完善以下信息。</view>
  <view class="questionnaire">
    <view class="questionnaire-li {{ indexid == '0'?'active':''}}" bindtap="clickcheck" data-id="0">
      <view class="questionnaires questionnaires-a"></view>
      <view class="questionnairetext">单人居住</view>
    </view>
    <view class="questionnaire-li {{ indexid == '1'?'active':''}}" bindtap="clickcheck" data-id="1">
      <view class="questionnaires questionnaires-b"></view>
      <view class="questionnairetext">两口之家</view>
    </view>
    <view class="questionnaire-li {{ indexid == '2'?'active':''}}" bindtap="clickcheck" data-id="2">
      <view class="questionnaires questionnaires-c"></view>
      <view class="questionnairetext">三口之家</view>
    </view>
    <view class="questionnaire-li {{ indexid == '3'?'active':''}}" bindtap="clickcheck" data-id="3">
      <view class="questionnaires questionnaires-d"></view>
      <view class="questionnairetext">二孩家庭</view>
    </view>
    <view class="questionnaire-li {{ indexid == '4'?'active':''}}" bindtap="clickcheck" data-id="4">
      <view class="questionnaires questionnaires-e"></view>
      <view class="questionnairetext">三代同堂一孩</view>
    </view>
    <view class="questionnaire-li {{ indexid == '5'?'active':''}}" bindtap="clickcheck" data-id="5">
      <view class="questionnaires questionnaires-f"></view>
      <view class="questionnairetext">三代同堂二孩</view>
    </view>
    <view class="questionnaire-li {{ indexid == '6'?'active':''}}" bindtap="clickcheck" data-id="6">
      <view class="questionnaires questionnaires-g"></view>
      <view class="questionnairetext">多孩家庭</view>
    </view>
    <view class="questionnaire-li {{ indexid == '7'?'active':''}}" bindtap="clickcheck" data-id="7">
      <view class="questionnaires questionnaires-h"></view>
      <view class="questionnairetext">其他</view>
    </view>
  </view>
  <button class="questionnaire-btn" bindtap="clicktoplan"></button>
</view>
