.bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 125rpx;
  background-color: #fff;
  display: flex;
  z-index: 999;
}

.bar>view {
  flex: 1;
  text-align: center;
  padding-top: 20rpx;
  box-sizing: border-box;
  height: 125rpx;
  font-size: 24rpx;
}
.bar>view>view {
  height: 40rpx;
  line-height: 40rpx;
}
.baricon1 image{
