.content {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow-y: scroll;
  background-color: #f3f2f2;
  
}

.home {
  width: 100vw;
  background: url(https://small.moreedge.cn/zh_smallxcx/activity1/activity/mycer.png) no-repeat top/100%;
  padding-top: 440rpx;
  box-sizing: border-box;
  padding-bottom: 140rpx;
}

.bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 125rpx;
  background-color: #fff;
  display: flex;
  z-index: 999;
}

.bar>view {
  flex: 1;
  text-align: center;
  padding-top: 20rpx;
  box-sizing: border-box;
  height: 125rpx;
  font-size: 24rpx;
}

.bar>view>view {
  height: 40rpx;
  line-height: 40rpx;
}

.baricon1 image {
  width: 36rpx;
  height: 36rpx;
}

.baricon2 image {
  width: 38rpx;
  height: 38rpx;
}

.baricon3 image {
  width: 36rpx;
  height: 38rpx;
}

.certificate {
  width: 682rpx;
  height: 938rpx;
  margin: 0 auto;
  padding-top: 86rpx;
  box-sizing: border-box;
  background: url(https://small.moreedge.cn/zh_smallxcx/activity1/activity/mycerbook.png) no-repeat top/100%;
}

.certificate1 {
  text-align: center;
  color: #fff;
  font-size: 28rpx;
}

.certificate2 {
  margin-top: 10rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
}

.avter {
  width: 90rpx;
  height: 90rpx;
  margin-top: 296rpx;
  margin-left: 296rpx;
  border-radius: 50%;
}

.name {
  text-align: center;
  font-size: 30rpx;
  margin-top: 10rpx;
  font-weight: 700;
}

.certificate3 {
  width: 574rpx;
  padding-left: 52rpx;
  text-align: left;
  line-height: 40rpx;
  font-size: 26rpx;
  margin-top: 36rpx;
  text-indent: 2em;
}

.certificate4 {
  width: 574rpx;
  padding-left: 52rpx;
  text-align: left;
  line-height: 40rpx;
  font-size: 26rpx;
  margin-top: 36rpx;
  text-indent: 2em;
}

.certificate5 {
  width: 574rpx;
  padding-left: 52rpx;
  text-align: right;
  line-height: 40rpx;
  font-size: 26rpx;
  margin-top: 36rpx;
}

.certificatebtn {
  width: 690rpx !important;
  height: 80rpx;
  background-color: #168ef0;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
  font-weight: 400;
  border-radius: 40rpx;
  margin-top: 20rpx;
  padding: 0;
  color: #fff;
}

.music {
  position: absolute;
  top: 212rpx;
  right: 30rpx;
  width: 34rpx;
  height: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.music-li {
  width: 4rpx;
  background-color: #fff;
}

.music-li:nth-child(1) {
  height: 20rpx;
}

.musicon .music-li:nth-child(1) {
  animation: music1 1s linear infinite;
}

@keyframes music1 {
  0% {
    height: 20rpx;
  }

  16% {
    height: 25rpx;
  }

  33% {
    height: 30rpx;
  }

  50% {
    height: 25rpx;
  }

  66% {
    height: 20rpx;
  }

  83% {
    height: 15rpx;
  }

  100% {
    height: 20rpx;
  }
}

.music-li:nth-child(2) {
  height: 15rpx;
}

.musicon .music-li:nth-child(2) {
  animation: music2 1s linear infinite;
}

@keyframes music2 {
  0% {
    height: 15rpx;
  }

  16% {
    height: 20rpx;
  }

  33% {
    height: 25rpx;
  }

  50% {
    height: 30rpx;
  }

  66% {
    height: 25rpx;
  }

  83% {
    height: 20rpx;
  }

  100% {
    height: 15rpx;
  }
}

.music-li:nth-child(3) {
  height: 25rpx;
}

.musicon .music-li:nth-child(3) {
  animation: music3 1s linear infinite;
}

@keyframes music3 {
  0% {
    height: 25rpx;
  }

  16% {
    height: 30rpx;
  }

  33% {
    height: 25rpx;
  }

  50% {
    height: 20rpx;
  }

  66% {
    height: 15rpx;
  }

  83% {
    height: 20rpx;
  }

  100% {
    height: 25rpx;
  }
}

