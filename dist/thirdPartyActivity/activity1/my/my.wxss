.music {
  position: absolute;
  top: 212rpx;
  right: 30rpx;
  width: 34rpx;
  height: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.music-li {
  width: 4rpx;
  background-color: #fff;
}

.music-li:nth-child(1) {
  height: 20rpx;
}

.musicon .music-li:nth-child(1) {
  animation: music1 1s linear infinite;
}

@keyframes music1 {
  0% {
    height: 20rpx;
  }

  16% {
    height: 25rpx;
  }

  33% {
    height: 30rpx;
  }

  50% {
    height: 25rpx;
  }

  66% {
    height: 20rpx;
  }

  83% {
    height: 15rpx;
  }

  100% {
    height: 20rpx;
  }
}

.music-li:nth-child(2) {
  height: 15rpx;
}

.musicon .music-li:nth-child(2) {
  animation: music2 1s linear infinite;
}

@keyframes music2 {
  0% {
    height: 15rpx;
  }

  16% {
    height: 20rpx;
  }

  33% {
    height: 25rpx;
  }

  50% {
    height: 30rpx;
  }

  66% {
    height: 25rpx;
  }

  83% {
    height: 20rpx;
  }

  100% {
    height: 15rpx;
  }
}

.music-li:nth-child(3) {
  height: 25rpx;
}

.musicon .music-li:nth-child(3) {
  animation: music3 1s linear infinite;
}

@keyframes music3 {
  0% {
    height: 25rpx;
  }

  16% {
    height: 30rpx;
  }

  33% {
    height: 25rpx;
  }

  50% {
    height: 20rpx;
  }

  66% {
    height: 15rpx;
  }

  83% {
    height: 20rpx;
  }

  100% {
    height: 25rpx;
  }
}