}

.bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 125rpx;
  background-color: #fff;
  display: flex;
  z-index: 999;
}

.bar>view {
  flex: 1;
  text-align: center;
  padding-top: 20rpx;
  box-sizing: border-box;
  height: 125rpx;
  font-size: 24rpx;
}
.bar>view>view {
  height: 40rpx;
  line-height: 40rpx;
}
.baricon1 image{
  width: 36rpx;
  height: 36rpx;
}
.baricon2 image{
  width: 38rpx;
  height: 38rpx;
}
.baricon3 image{
  width: 36rpx;
  height: 38rpx;
}

.mylist {
  width: 698rpx;
  height: 248rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  display: flex;
  background: url(https://small.moreedge.cn/zh_smallxcx/activity1/activity/myborder.png) no-repeat top/100%;
}

.mylist>view {
  position: relative;
  flex: 1;
  text-align: center;
}

.myli4 {
  position: relative;
  flex: 1;
  text-align: center;
  background-color: rgba(255, 255, 255, 0);
  padding: 0 !important;
  margin: 0 !important;
}

