/* pages/activity1/my/myintegral.wxss */
.content {
  position: relative;
  width: 100%;
  background-color: #f3f2f2;
}

.home {
  width: 100vw;
  height: 100vh;
  background: url(https://small.moreedge.cn/zh_smallxcx/activity1/activity/myintegral.png) no-repeat top/100%;
  padding-top: 440rpx;
  box-sizing: border-box;
}

.bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 125rpx;
  background-color: #fff;
  display: flex;
  z-index: 999;
}

.bar>view {
  flex: 1;
  text-align: center;
  padding-top: 20rpx;
  box-sizing: border-box;
  height: 125rpx;
  font-size: 24rpx;
}
.bar>view>view {
  height: 40rpx;
  line-height: 40rpx;
}
.baricon1 image{
  width: 36rpx;
  height: 36rpx;
}
.baricon2 image{
  width: 38rpx;
  height: 38rpx;
}
.baricon3 image{
  width: 36rpx;
  height: 38rpx;
}

.myinbox {
  position: relative;
  width: 698rpx;
  height: 134rpx;
  margin: 0 auto;
  margin-bottom: 18rpx;
  background: url(https://small.moreedge.cn/zh_smallxcx/activity1/activity/myinbox.png) no-repeat top/100%;
  display: flex;
  line-height: 134rpx;
}

.myinbox view:nth-child(2){
  font-size: 26rpx;
  margin-left: 108rpx;
}

.myinbox image:nth-child(3){
  width: 46rpx;
  height: 46rpx;
  margin: 38rpx 26rpx 0 254rpx;
}

.myinbox view:nth-child(4){
  font-size: 30rpx;
}

.myinbox:nth-child(2) image:nth-child(1){
  position: absolute;
  width: 28rpx;
  height: 44rpx;
  top: 50rpx;
  left: 58rpx;
}

.myinbox:nth-child(3) image:nth-child(1){
  position: absolute;
  width: 34rpx;
  height: 36rpx;
  top: 54rpx;
  left: 52rpx;
}

.myinbox:nth-child(4) image:nth-child(1){
  position: absolute;
  width: 34rpx;
  height: 36rpx;
  top: 54rpx;
  left: 52rpx;
}

.myinbox:nth-child(5) image:nth-child(1){
  position: absolute;
  width: 42rpx;
  height: 26rpx;
  top: 58rpx;
  left: 48rpx;
}

.myinbox:nth-child(6) image:nth-child(1){
  position: absolute;
