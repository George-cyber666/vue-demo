/* pages/activity1/my/myprize.wxss */
.content1 {
  position: relative;
  width: 100%;
  min-height: 100vh;
  background-color: #f3f2f2;
  overflow-y: scroll;
}

.home {
  width: 100vw;
  background: url(https://small.moreedge.cn/zh_smallxcx/activity1/activity/myprize.png) no-repeat top/100%;
  padding-top: 440rpx;
  box-sizing: border-box;
}

.bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 125rpx;
  background-color: #fff;
  display: flex;
  z-index: 999;
}

.bar>view {
  flex: 1;
  text-align: center;
  padding-top: 20rpx;
  box-sizing: border-box;
  height: 125rpx;
  font-size: 24rpx;
}
.bar>view>view {
  height: 40rpx;
  line-height: 40rpx;
}
.baricon1 image{
  width: 36rpx;
  height: 36rpx;
}
.baricon2 image{
  width: 38rpx;
  height: 38rpx;
}
.baricon3 image{
  width: 36rpx;
  height: 38rpx;
}

.prize {
  width: 690rpx;
  height: 156rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
  background: url(https://small.moreedge.cn/zh_smallxcx/activity1/activity/myprizebox.png) no-repeat top/100%;
  padding: 30rpx;
  box-sizing: border-box;
}

.prizetext1 {
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.prizetext2 {
  font-size: 22rpx;
  color: #949494;
  margin-top: 20rpx;
  margin-left: 10rpx;
}

.subinput {
  width: 690rpx;
  height: 640rpx;
  background-color: #fff;
  border-radius: 30rpx;
  margin:  0 auto;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  background-image: url(https://small.moreedge.cn/zh_smallxcx/activity1/pageshadebg.png);
  background-size: 100% 100%;
}

.subbox {
  border-bottom: 1px solid #bfbfbf;
  display: flex;
  margin-bottom: 20rpx;
}

.subbox view {
  width: 330rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 26rpx;
}
.subbox text{
  color: #D43030;
}

.subboxs {
  font-size: 26rpx;
}

.subbox input {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 26rpx;
  text-align: right;
}

.subpicker {
  width: 558rpx;
  height: 72rpx;
  line-height: 70rpx;
  padding-left: 24rpx;
  background: url(https://small.moreedge.cn/zh_smallxcx/activity1/activity/myprizepicker.png) no-repeat top/100%;
  margin: 35rpx 0;
  box-sizing: border-box;
  font-size: 26rpx;
}

.subbtn {
  width: 690rpx !important;
  height: 80rpx;
  background-color: #168ef0;
  border-radius: 30rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
  padding: 0;
  font-weight: 400;
  margin-top: 20rpx;
  color: #fff;
}

.content2 {
  width: 270rpx;
  height: 316rpx;
  position: absolute;
  top:50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.content2 image{
  width: 100%;
  height: 100%;
}
.music {
  position: absolute;
  top: 212rpx;
  right: 30rpx;
  width: 34rpx;
  height: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.music-li {
  width: 4rpx;
  background-color: #fff;
}

.music-li:nth-child(1) {
  height: 20rpx;
}

.musicon .music-li:nth-child(1) {
  animation: music1 1s linear infinite;
}

@keyframes music1 {
  0% {
    height: 20rpx;
  }

  16% {
    height: 25rpx;
  }

  33% {
    height: 30rpx;
  }

  50% {
    height: 25rpx;
  }

  66% {
    height: 20rpx;
  }

  83% {
    height: 15rpx;
  }

  100% {
    height: 20rpx;
  }
}

.music-li:nth-child(2) {
  height: 15rpx;
}

.musicon .music-li:nth-child(2) {
  animation: music2 1s linear infinite;
}

@keyframes music2 {
  0% {
    height: 15rpx;
  }

  16% {
    height: 20rpx;
  }

  33% {
    height: 25rpx;
  }

  50% {
    height: 30rpx;
  }

  66% {
    height: 25rpx;
  }

  83% {
    height: 20rpx;
  }

  100% {
    height: 15rpx;
  }
}

.music-li:nth-child(3) {
  height: 25rpx;
}

.musicon .music-li:nth-child(3) {
  animation: music3 1s linear infinite;
}

@keyframes music3 {
  0% {
    height: 25rpx;
  }

  16% {
    height: 30rpx;
  }

  33% {
    height: 25rpx;
  }

  50% {
    height: 20rpx;
  }

  66% {
    height: 15rpx;
  }

  83% {
    height: 20rpx;
  }

  100% {
    height: 25rpx;
  }
}

.awardname{
  font-size: 26rpx;
  color: rgb(56,56,56);
  text-align: center;
}
.title{
  font-size: 26rpx;
  color: rgb(56,56,56);
  text-align: center;
  margin: 10rpx auto 45rpx auto;
}
.award{
  width: 688rpx;
  height: 414rpx;
  margin: 26rpx auto auto auto;
  position: relative;
}
.award image{
  width: 100%;
  height: 100%;
}
.awardTip{
  font-size: 26rpx;
  position: absolute;
  top:50%;
  left: 0;
  transform: translateY(-50%);
  width: 100%;
  text-align: center;
  line-height: 60rpx;
}