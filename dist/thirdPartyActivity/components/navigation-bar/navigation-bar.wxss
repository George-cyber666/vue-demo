.nav-bar {
  position: fixed;
  width: 100%;
  top: 0;
  color: #fff;
  /* background-color: transparent; */
  background: linear-gradient(180deg, #303D49 0%, #20282E 100%);
  z-index: 1000;
}

.nav-bar .nav-title {
  color: #000;
  font-size: 36rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}
.nav-bar .nav-home{
  width: 109rpx;
  height: 89rpx;
  position: absolute;
  left: 35rpx;
}
.nav-bar .nav-btn{
  width: 98rpx;
  height: 80rpx;
  position: absolute;
  left: 35rpx;
}
.nav-bar .nav-logo{
  width: 118rpx;
  height: 118rpx;
  position:absolute;
  left: 39rpx;
  margin-top: -20rpx;
}